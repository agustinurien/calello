    background-color: #1f3147;
  }
  .doctor .sobreMi h3 {
    padding: 25px 0px;
    margin: 0px;
    font-size: 1.7rem;
    color: white;
    font-family: "Supreme-Variable", sans-serif;
  }
  .doctor .sobreMi p {
    margin: 0px;
    padding-bottom: 35px;
    font-size: 1.1rem;
    color: #fef5e4;
    font-family: "Supreme-Variable", sans-serif;
    line-height: 1.1;
    font-weight: 600;
  }
  .doctor .sobreMi a {
    background-color: #fccfa8;
    color: #1f3147;
    padding: 7px 14px;
    text-decoration: none;
    border-radius: 20px;
    font-size: 0.7rem;
    font-family: "Supreme-Variable", sans-serif;
    font-weight: 700;
  }

  .titleContainer2 {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    padding-left: 20%;
    z-index: 3;
  }
  .heroTitle {
    font-size: 3rem;
    color: #1f3147;
    margin-top: 0px;
