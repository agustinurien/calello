    color: white;
    padding: 7px 14px;
    text-decoration: none;
    border-radius: 20px;
    font-size: 0.7rem;
    font-family: "Supreme-Variable", sans-serif;
    font-weight: 700;
  }
  .doctor .sobreMi {
