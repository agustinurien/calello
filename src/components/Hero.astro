    align-items: center;
    padding: 25px 0px;

    width: 180px;
  }
  .doctor .presentacion .logoContainer .logo {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .doctor .presentacion p {
    margin: 0px;
    color: #1f3147;
    padding-bottom: 16px;
    font-family: "Supreme-Variable", sans-serif;
