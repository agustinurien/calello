    font-family: "Supreme-Variable", sans-serif;
    font-weight: 700;
  }
  .titleContainer2 a {
    background-color: #fccfa8;
    color: #1f3147;
    padding: 7px 14px;
    text-decoration: none;
    border-radius: 20px;
    font-size: 0.7rem;
    font-family: "Supreme-Variable", sans-serif;
    font-weight: 700;
  }
  .heroImage {
    position: relative;
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
    height: 550px;
    width: 67%;
    z-index: 1;
    
    
  }
  .heroImage img {
    transform: scale(1.3);
    height: 100%;
