      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      gap: 20px;
      padding: 0px;
      padding-bottom: 40px;
      padding-top: 40px;
      
  }
  .dr{
    display: flex;
    align-items: center;
    justify-content: space-between;
    
    width: 80%;

  }
    .doctor .presentacion h2 {
      
      font-size: 2rem;
      margin-top: 0px;
    }
    .doctor .presentacion h2 br{
      display: none;
    }
    .doctor .presentacion .logoContainer {
    display: flex;
    
    align-items: center;
    padding: 0px 0px;
    width: 150px;
    
    
  }
  .doctor .presentacion .logoContainer .logo {
    width: 50%;
    height: 100%;
    object-fit: contain;
  }
    .doctor .presentacion p{
      font-size: 0.8rem;
      padding-bottom: 0px;
