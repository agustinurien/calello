---
import Layout from "../layouts/Layout.astro";
import icon3 from "../assets/images/icon3.png";
import Patologia from "../components/Patologia.jsx";
---

<Layout>
  <div class="titulo">
    <div class="iconContainer">
      <img src={icon3.src} alt="" />
    </div>
    <div>
      <h1>Patología <br />ambulatoria</h1>
      <h3>Las respuestas que necesita</h3>
    </div>
  </div>
  <div class="tituloBottom"></div>
  <section>
    <div class="containerCirugia">
      <Patologia client:load />
    </div>
  </section>
  <div class="dudas">
    <h3>¿Aún tiene dudas? Contácteme.</h3>
    <div class="links">
      <a href="https://wa.me/5491130145034" target="_blank">Dr.Calello-Cirugiapediatrica</a>
      <a href="https://www.instagram.com/docsanticalello/" target="_blank" class="doc">@DocSantiCalello</a>
    </div>
  </div>
</Layout>

<style>
  .titulo {
    height: 200px;
    width: 100%;
    display: flex;
    justify-content: flex-start;
    gap: 35px;
    align-items: center;
    background-color: #4f7792;
    margin-top: 90px;
    padding: 0px 8%;
    box-sizing: border-box;
  }
  .titulo .iconContainer {
    width: 150px;
    height: 150px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 100%;
    overflow: hidden;
  }
  .titulo .iconContainer img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .titulo h1 {
    margin: 0px;
    margin-bottom: 10px;
    width: 400px;
    font-size: 3rem;
    color: #fefefe;
    font-family: "Supreme-Variable", sans-serif;
    line-height: 1;
    font-weight: 600;
  }
  .titulo h3 {
    margin: 0px;
    color: #fefefe;
    font-family: "Supreme-Variable", sans-serif;
    font-weight: 400;
  }
  .tituloBottom {
    width: 100%;
    height: 30px;
    background-color: #fff1d096;
  }
  section {
    display: flex;
    justify-content: center;
    padding-bottom: 150px;
    height: fit-content;
    padding-top: 40px;
  }
  .containerCirugia {
    display: flex;
    justify-content: center;
    gap: 50px;
    width: 100%;
  }
  .dudas {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    font-family: "Supreme-Variable", sans-serif;
  }
  .links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
    padding-bottom: 50px;
  }
  .links a {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #ffffff;
    color: #203147;
    border: 3px solid #203147;
    border-radius: 20px;
    font-size: 1rem;
    text-decoration: none;
    padding: 5px 20px;
    font-family: "Supreme-Variable", sans-serif;
  }
  .links .doc {
    background-color: #203147;
    color: #ffffff;
  }
  @media screen and (max-width: 1150px) {
    .containerCirugia {
      gap: 20px;
    }
  }
  @media screen and (max-width: 768px) {
    .containerCirugia {
      flex-direction: column;
      align-items: center;
    }
    .titulo .iconContainer {
      display: none;
    }
    .titulo {
      padding: 0px 6%;
      font-size: 0.8rem;
    }
    .titulo h1{
      
      width: fit-content;
    }
  }
</style>
